                            string="Buscar Ubigeo"
                            class="o_address_city" 
                            context="{'ubigeo_search':True}"
                            placeholder="Departamento o provincia o distrito" 
                            options="{'no_open': True,'no_create':True,'no_create_edit':True,'no_quick_create':True}" 
                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" 
                            domain="[('country_id', '=', country_id),('state_id', '!=',False ),('province_id', '!=', False)]"/>            
                    <field name="zip" 
                            placeholder="Ubigeo" 
                            string="Ubigeo"
                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>

                    <field name="state_id" 
                            invisible="1"
                            class="o_address_city" 
                            placeholder="Departamento" 
                            options="{'no_open': True}" 
                            attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"  
                            domain="[('country_id', '=', country_id),('state_id', '=', False)]"/>
                     <field name="street2" 
                            invisible="1"
                            placeholder="Urbanización o Zona" 
                            class="o_address_street" 
