<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_background_gestionit">
        <div t-attf-class="header o_company_#{company.id}_layout">
            <t t-set="o" t-value="o if o else doc"/>
            <div class="o_report_header_pe_v1">
                <div class="row">
                    <div class="col-4">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo" class="w-100"/>
                    </div>
                    <div class="col-4" name="company_address">
                        <div>
                            <span t-field="o.company_id.name"/>
                        </div>
                        <div>
                            <span t-field="o.company_id.street"/>
                        </div>
                        <div t-if="o.company_id.email">
                            <b> Email: </b>
                            <span t-field="o.company_id.email"/>
                        </div>
                        <div t-if="o.company_id.phone">
                            <b> Tel√©fono: </b>
                            <span t-field="o.company_id.phone"/>
                        </div>
                        <div t-if="o.company_id.website">
                            <b> Website: </b>
                            <span t-field="o.company_id.website"/>
                        </div>
                    </div>
                    <div class="col-4" name="company_document">
                        <div class="pt-2">
                            <div class="text-center">
                                <b>
                                    <t t-esc="document_display_name"/>
                                </b>
                            </div>
                            <div class="text-center">
                                <span t-esc="'R.U.C. {}'.format(o.company_id.vat)"/>
                            </div>
                            <div class="text-center">
                                <span t-esc="o.name"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div t-attf-class="o_company_#{company.id}_layout article o_report_layout_pe_v1" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-raw="0"/>
        </div>
    </template>
</odoo>