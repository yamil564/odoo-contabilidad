<odoo>
    <data>
        <record id="guia_remision_setting" model="ir.ui.view">
            <field name="name">Opciones de guía de remisión</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Facturación electrónica" string="Facturación electrónica">
                        <h2>Guía de remisión</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="calc_peso"/>
                                </div>
                                <div class="o_setting_right_pane" name="l10n_eu_service_right_pane">
                                    <label for="calc_peso"/>
                                    <div class="text-muted">
                                        Calcular peso automáticamente.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>