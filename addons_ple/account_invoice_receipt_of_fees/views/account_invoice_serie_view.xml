<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_invoice_document_2" inherit_id="account.report_invoice_document">
            <xpath expr="//t[@t-call='web.external_layout']/div[@class='page']/h2/span[@t-field='o.number']" position="replace">
                <p>Número de Serie: <t t-esc="o.prefix_code"/></p>
                <p>Número de Documento: <t t-esc="o.invoice_number"/></p>
            </xpath>

            <xpath expr="//t[@t-call='web.external_layout']/div[@class='page']/div[@id='informations']/div[@name='invoice_date']" position="replace">
                <!--<p>Fecha de Emisión: <t t-esc="o.fecha_emision"/></p>-->
                <div class="col-auto mw-100 mb-2" t-if="o.fecha_emision" name="fecha_emision">
                            <strong>Fecha de Emisión:</strong>
                            <p class="m-0" t-field="o.fecha_emision"/>
                </div>
                <!--<t t-if="o.type=='out_invoice'">-->
                <div class="col-auto mw-100 mb-2" t-if="o.canal_ventas" name="canal_ventas">
                            <strong>Canal de Ventas:</strong>
                            <p class="m-0" t-field="o.canal_ventas"/>
                </div>
                <!--</t>-->
            </xpath>
        </template>
    </data>
</odoo>