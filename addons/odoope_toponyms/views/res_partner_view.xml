        <!-- Open partner address -->
        <record id="view_odoope_partner_address_form" model="ir.ui.view">
            <field name="name">odoope.res.partner.form.address</field>
            <field name="model">res.partner</field>
            <field name='inherit_id' ref='base.view_partner_address_form'/>
            <field name="arch" type="xml">
                <div class="o_address_format" position="replace">                    
                    <div class="o_address_format">
                        <field name="street" 
                                placeholder="Street..." 
                                class="o_address_street"/>
                        <field name="street2" 
                                placeholder="Urbanización o Zona" 
                                class="o_address_street" 
                                attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                        <field name="country_id" 
                                placeholder="Country" 
                                class="o_address_city" 
                                options="{'no_open': True, 'no_create': True}" 
                                attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/> 
                        <field name="state_id" 
                                class="o_address_state" 
                                placeholder="Departamento" 
                                options="{'no_open': True}" 
                                attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"  
                                domain="[('country_id', '=', country_id),('state_id', '=', False)]"/>
                        <field name="province_id" 
                                class="o_address_city" 
                                placeholder="Provincia" 
                                style="width: 48%" 
                                options="{'no_open': True}" 
                                attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" 
                                domain="[('country_id', '=', country_id),('province_id', '=', False)]"/>
                        <field name="district_id" 
                                class="o_address_state" 
                                placeholder="Distrito" 
                                style="width: 48%" 
                                options="{'no_open': True}" 
                                attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" 
                                domain="[('country_id', '=', country_id),('state_id', '=', state_id),('province_id', '=', province_id)]"/>
                        <field name="zip" 
                                placeholder="ZIP" 
                                style="width: 48%" 
                                attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>
                        <field name="city" 
                                placeholder="Otra referencia" 
                                style="width: 48%" 
                                attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/> 
                    </div>
                                   
				</div>
            </field>
